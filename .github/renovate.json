{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "platform": "github",
    "repositories": ["BoredOtter/Beerify-API"],
    "branchConcurrentLimit": 0,
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    
    "packageRules": [
        {
            "matchBaseBranches": ["master","dev","main"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "matchPaths": ["Dockerfile", "requirements.txt"]
        }
    ]
}